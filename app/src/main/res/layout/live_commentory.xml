<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DetailsActivity"
    android:background="@drawable/iis_background_image">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinn_Language"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/lang_commentary_message_accessibility"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_button_play"
        android:src="@drawable/button_orange_play"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:contentDescription="@string/live_commentory_play_message"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/play_message_text"
        android:id="@+id/play_message"
        android:layout_below="@+id/image_button_play"
        android:layout_marginTop="43dp"
        android:gravity="center_horizontal"
        android:importantForAccessibility="no"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for Text Commentary"
        android:id="@+id/btnTextStreaming"
        android:background="@android:color/holo_orange_light"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/tvRadio2"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvRadioFreq"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"
        android:focusable="true"
        android:importantForAccessibility="yes" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvRadio1"
        android:layout_below="@+id/tvRadioFreq"
        android:layout_alignStart="@+id/tvRadio2"
        android:layout_marginTop="39dp"
        android:textAlignment="center"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:focusable="true"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvRadio2"
        android:layout_below="@+id/tvRadio1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textAlignment="center"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:focusable="true"
       />

</RelativeLayout>
