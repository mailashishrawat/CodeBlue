<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NetworkingListPeople"
    android:background="@android:color/white"
    android:id="@+id/rel_Lay_NetPeopleList">

    <TextView android:text="@string/people_list_catg" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_intCatg_header_netList"
        android:contentDescription="@string/networking_list"
        android:importantForAccessibility="yes" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvPeopleList"
        android:layout_below="@+id/tv_intCatg_header_netList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

</RelativeLayout>